{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "neighbors": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "neighbor_local": {
              "type": "object",
              "properties": {
                "asn": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "id"
                      ]
                    },
                    {
                      "required": [
                        "name"
                      ]
                    }
                  ]
                },
                "ip": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "ipv4": {
                      "type": "string"
                    },
                    "networkv4": {
                      "type": "integer"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "id"
                      ]
                    },
                    {
                      "required": [
                        "networkv4"
                      ]
                    }
                  ]
                },
                "equipment": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "id"
                  ]
                }
              },
              "required": [
                "asn",
                "ip",
                "equipment"
              ]
            },
            "neighbor_remote": {
              "type": "object",
              "properties": {
                "asn": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "id"
                      ]
                    },
                    {
                      "required": [
                        "name"
                      ]
                    }
                  ]
                },
                "ip": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "ipv4": {
                      "type": "string"
                    },
                    "networkv4": {
                      "type": "integer"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "id"
                      ]
                    },
                    {
                      "required": [
                        "networkv4"
                      ]
                    }
                  ]
                },
                "equipment": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "id"
                  ]
                }
              },
              "required": [
                "asn",
                "ip",
                "equipment"
              ]
            },
            "peer_group": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "route-map": {
                  "type": "object",
                  "properties": {
                    "route-map-in": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        }
                      },
                      "oneOf": [
                        {
                          "required": [
                            "id"
                          ]
                        },
                        {
                          "required": [
                            "name"
                          ]
                        }
                      ]
                    },
                    "route-map-out": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        }
                      },
                      "oneOf": [
                        {
                          "required": [
                            "id"
                          ]
                        },
                        {
                          "required": [
                            "name"
                          ]
                        }
                      ]
                    }
                  },
                  "required": [
                    "route-map-in",
                    "route-map-out"
                  ]
                },
                "environments": {
                  "items": {
                    "type": "integer"
                  },
                  "type": "array"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "id"
                  ]
                },
                {
                  "required": [
                    "name",
                    "route-map",
                    "environments"
                  ]
                }
              ]
            },
            "community": {
              "type": "boolean"
            },
            "soft_reconfiguration": {
              "type": "boolean"
            },
            "remove_private_as": {
              "type": "boolean"
            },
            "next_hop_self": {
              "type": "boolean"
            },
            "kind": {
              "type": "string"
            }
          },
          "required": [
            "neighbor_local",
            "neighbor_remote",
            "peer_group",
            "community",
            "soft_reconfiguration",
            "remove_private_as",
            "next_hop_self",
            "kind"
          ]
        }
      ]
    }
