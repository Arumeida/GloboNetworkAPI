{
  "title": "Vip Post",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "vips"
  ],
  "properties": {
    "vips": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "null"
          },
          "name": {
            "type": "string"
          },
          "service": {
            "type": "string"
          },
          "business": {
            "type": "string"
          },
          "environmentvip": {
            "type": "integer"
          },
          "ports": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "null"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "options": {
                  "type": "object",
                  "properties": {
                    "l4_protocol": {
                      "type": "integer"
                    },
                    "l7_protocol": {
                      "type": "integer"
                    }
                  }
                },
                "pools": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "null"
                      },
                      "server_pool": {
                        "type": "integer"
                      },
                      "l7_rule": {
                        "type": "integer"
                      },
                      "l7_value": {
                        "type": [
                          "string",
                          "null"
                        ]
                      },
                      "order": {
                        "type": [
                          "integer",
                          "null"
                        ]
                      }
                    },
                    "required": [
                      "server_pool",
                      "l7_rule"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            }
          },
          "options": {
            "type": "object",
            "properties": {
              "timeout": {
                "type": "integer"
              },
              "cache_group": {
                "type": "integer"
              },
              "traffic_return": {
                "type": "integer"
              },
              "persistence": {
                "type": "integer"
              }
            }
          },
          "ipv6": {
            "type": [
              "integer",
              "null"
            ]
          },
          "ipv4": {
            "type": [
              "integer",
              "null"
            ]
          }
        }
      }
    }
  }
}