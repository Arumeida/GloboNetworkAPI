{
  "title": "Vip Put",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "vips"
  ],
  "definitions": {
    "ipv4": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "ip_formated"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "ip_formated": {
          "type": "string",
          "oneOf": [
            {
              "format": "ipv4"
            }
          ]
        }
      }
    },
    "ipv6": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "ip_formated"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "ip_formated": {
          "type": "string",
          "oneOf": [
            {
              "format": "ipv6"
            }
          ]
        }
      }
    }
  },
  "properties": {
    "vips": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "service": {
            "type": "string"
          },
          "business": {
            "type": "string"
          },
          "environmentvip": {
            "type": "integer"
          },
          "ports": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": [
                    "integer",
                    "null"
                  ]
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "options": {
                  "type": "object",
                  "properties": {
                    "l4_protocol": {
                      "type": "integer"
                    },
                    "l7_protocol": {
                      "type": "integer"
                    }
                  }
                },
                "pools": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "server_pool": {
                        "type": "integer"
                      },
                      "l7_rule": {
                        "type": "integer"
                      },
                      "l7_value": {
                        "type": [
                          "string",
                          "null"
                        ]
                      }
                    },
                    "required": [
                      "server_pool",
                      "l7_rule",
                      "l7_value"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            }
          },
          "options": {
            "type": "object",
            "properties": {
              "timeout": {
                "type": "integer"
              },
              "cache_group": {
                "type": "integer"
              },
              "traffic_return": {
                "type": "integer"
              },
              "persistence": {
                "type": "integer"
              }
            }
          },
          "ipv6": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/definitions/ipv6"
              }
            ]
          },
          "ipv4": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/definitions/ipv4"
              }
            ]
          }
        }
      }
    }
  }
}